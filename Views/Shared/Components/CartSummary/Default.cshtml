@model MyCart
<div class="position-relative
">
    @if (Model.Lines.Count() > 0)
    {
        <small class="navbar-text position-absolute top-0 start-100 translate-middle badge badge-pill badge-danger" style="border-radius: 50%">
           
            @if (Model.Lines.Sum(x => x.Quantity) >= 2)
            {
                <text>@Model.Lines.Sum(x => x.Quantity) </text>
            }
            else
            {
                <text>@Model.Lines.Sum(x => x.Quantity) </text>
            }
        </small>
    }
    <a class="text-dark font-weight-bold" asp-page="/MyCart"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-cart-shopping"></i>   GIỎ HÀNG
    </a>
</div>