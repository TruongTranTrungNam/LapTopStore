@model Order

@{ Layout = "_LayoutOrder"; }
<p>Vui lòng nhập thông tin của bạn:</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Giao hàng đến</h3>
    <div class="form-group">
        <label>Họ và Tên</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Địa chỉ</h3>
    <div class="form-group">
        <label>Hàng 1:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hàng 2:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thành phố:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tỉnh</label><input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quận và huyện</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Đất nước:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Xác Nhận" />
    </div>
</form>